@model myApp.Models.Prestamo

@{
    ViewData["Title"] = "Detalles del Préstamo";
}

<h1>🔎 Detalles del Préstamo</h1>

<div class="card p-3">
    <p><strong>Libro:</strong> @Model.Libro?.Titulo</p>
    <p><strong>Usuario:</strong> @Model.Usuario?.Nombre</p>
    <p><strong>Fecha de Préstamo:</strong> @Model.FechaPrestamo.ToShortDateString()</p>
    <p><strong>Fecha de Devolución:</strong> @Model.FechaDevolucion.ToShortDateString()</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">✏️ Editar</a>
<a asp-action="Index" class="btn btn-secondary mt-3">↩️ Volver</a>
