@model myApp.Models.Prestamo

@{
    ViewData["Title"] = "Eliminar Préstamo";
}

<h1>Eliminar Préstamo</h1>

<h3>¿Estás seguro que deseas eliminar este préstamo?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Libro</dt>
        <dd class="col-sm-10">@Model.Libro.Titulo</dd>
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Usuario.Nombre</dd>
        <dt class="col-sm-2">Fecha de Préstamo</dt>
        <dd class="col-sm-10">@Model.FechaPrestamo.ToShortDateString()</dd>
        <dt class="col-sm-2">Fecha de Devolución</dt>
        <dd class="col-sm-10">@Model.FechaDevolucion.ToShortDateString()</dd>
    </dl>
</div>
    
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
